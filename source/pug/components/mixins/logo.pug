mixin logo()
  if(currentUrl === "index.html")
    .logo&attributes(attributes)
      img(src= "./img/svg/logo.svg", width="88", height="24", alt="Логотип проекта")

  else
    a.logo(href="index.html", aria-label="Переход на главную")&attributes(attributes)
      img(src= "./img/svg/logo.svg", width="167", height="44", alt="Логотип проекта")

//-mixin logo()
  if(currentUrl === logo.href)
    a.logo(href="${logo.href}#start", aria-label=logo.label, data-trigger)
      +icon(logo.name, logo.width, logo.height)
      span.visually-hidden=logo.span
  else
    a.logo(href=logo.href, aria-label=logo.label)
      +icon(logo.name, logo.width, logo.height)
      span.visually-hidden=logo.span
